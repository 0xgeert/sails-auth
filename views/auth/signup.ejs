<link href='http://sailsjs.org/styles/fonts.css' rel='stylesheet'/>
<link href='../styles/main.css' rel='stylesheet'/>
<!--[if IE 7]>
<link href='../styles/ie7.css' rel='stylesheet'/>
<![endif]-->

<div class="container clearfix">
    <div class="main">
        <h1 id="main-title">Please sign up</h1>

        <span style="color: red" ><%- req.flash('message') %></span>

        <div id="signup">
            
            <p>
                <label for="email">Email:</label>
                <input id="email" type="text" name="email"/>
            </p>

            <p>
                <label for="password">Password:</label>
                <input id="password" type="password" name="password"/>
            </p>

            <p>
                <label for="displayname">Display Name:</label>
                <input id="displayname" type="text" name="displayname"/>
            </p>

            <p>
                <input name="submit" type="submit" value="Sign Up"/>
            </p>
        </div>
        
        <div> 
            <div>Or be social: </div>
            <a href="/auth/github/" class="btn">with GitHub</a>

            <a href="/auth/facebook/" class="btn">with Facebook</a>

            <a href="/auth/google/" class="btn">with Google+</a>
        </div>
        

        <div class="delete">
            <div class="sprite">You're looking at: <span class="boxy">views/auth/signup.ejs</span></div>
        </div>
    </div>
</div>

<% block('footer', "<script type='text/javascript' src='/js/pages/signup.js'></script>") -%>